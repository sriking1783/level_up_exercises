.email_page
  = render :partial => 'shared/side_bar'
  .logo
    %span.company_logo{:class => "fa-5"}= fa_icon "windows"
  .search_email
    %input.search_input{type: 'text'}
    %span.caret-icon= fa_icon 'caret-down'
    .search_button
      %span.search_icon= fa_icon 'search'
  %section.content
    %table{:width => '968px'}
      - (1..50).each do |i|
        %tr{:class => "mail_row", :id => "mail_#{i}", :style => "border-width: 1px;  #000; border-style: solid;"}
          %td
            %img{:id => "img_#{i}", :src => "/images/grippy_large.png", :style => "visibility: hidden;"}
            %input{:type=>"checkbox"}
          %td
            %img{:id => "img_#{i}", :src => "/images/star4.png"}
          %td
          %td
            You have got mail
          %td
            Hello, this is...
          %td= Date.today





:javascript
  $('.mail').hover(function(){
  });
  $('.mail_row').hover(function(){
    id = this.id.split('_')[1]
    $('#img_'+id).css('visibility', 'visible');
  }, function(){
      $('#img_'+id).css('visibility', 'hidden');
  });
